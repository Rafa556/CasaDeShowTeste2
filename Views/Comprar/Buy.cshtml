@model PartyHome.Models.Comprar

    <p><b><h1 style="font-size:500%;color:#ffd600">Comprar</h1></b></p>
    <hr>

    <div class="row text-light">
        <div class="col-md-4">
            <form  class="form-horizontal" asp-controller="Comprar" asp-action="Compras">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="@Model.Eventos.Id">

                <div class="form-group">
                    <label asp-for="QtdIngressos" class="control-label">Quantidade de Ingressos</label>
                    <input asp-for="QtdIngressos" class="form-control" type="number" value="1" min="500" max="@Model.Eventos.QuantidadeIngressos" /> 
                    <span asp-validation-for="QtdIngressos" class="text-danger"></span> 
                    </div> 
                    <div class="form-group"> <p>Valor de cada Ingresso: R$@Model.Eventos.Custo</p> 
                    </div> 
                    <div class="form-group"> 
                        <button type="submit" class="btn btn-primary">Comprar</button>
                </div>
                </form>
        </div>
    </div>  